{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["chrome"],              
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
